<div class="container">
  <nav class="navbar is-light">
    <div class="navbar-brand">
      <%= link_to root_path, class: 'navbar-item' do %>
        <%= image_tag("logo_min.jpg", :alt => "logo") %>
      <% end %>
      <div class="navbar-burger burger" onclick="document.querySelector('.navbar-menu').classList.toggle('is-active');">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>

    <div id="main-nav" class="navbar-menu">

        <%= link_to home_about_path, class: 'navbar-item' do %>
          <span class="icon">
            <i class="far fa-gem"></i>
          </span>
          <span>O mnie</span>
        <% end %>
        <%= link_to home_faq_path, class: 'navbar-item' do %>
          <span class="icon">
            <i class="far fa-star"></i>
          </span>
          <span>FAQ</span>
        <% end %>
        <%= link_to home_contact_path, class: 'navbar-item' do %>
          <span class="icon">
            <i class="far fa-star"></i>
          </span>
          <span>Kontakt</span>
        <% end %>
        <%= link_to new_note_path, class: 'navbar-item' do %>
          <span class="icon">
            <i class="far fa-star"></i>
          </span>
          <span>Nowa notatka</span>

          <% if user_signed_in? %>
            <%= link_to notes_path, class: 'navbar-item' do %>
            <span class="icon">
              <i class="far fa-star"></i>
            </span>
              <span>Lista notatek</span>
            <% end %>
            <%= link_to destroy_user_session_path, method: :delete, class: 'navbar-item' do %>
              <span class="icon">
                <i class="far fa-star"></i>
              </span>
              <span>Wyloguj</span>
            <% end %>
          <% else %>
            <%= link_to new_user_registration_path, class: 'navbar-item' do %>
            <span class="icon">
              <i class="far fa-star"></i>
            </span>
              <span>Rejestracja</span>
            <% end %>
            <%= link_to new_user_session_path, class: 'navbar-item' do %>
            <span class="icon">
              <i class="far fa-star"></i>
            </span>
              <span>Logowanie</span>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </nav>
</div>